<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thanelocker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>
    <uses-feature android:name="android.hardware.camera" android:required="true"/>
    <uses-feature android:name="android.hardware.location" android:required="true"/>
    <uses-feature android:name="android.hardware.location.gps" android:required="true"/>
    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThaneLocker">
        <meta-data android:name="com.google.android.geo.API_KEY" android:value="AIzaSyCb_87wr_GLh0iXz-Y5ZOZoVtqp7U_AUuc"/>
        <activity
            android:name="com.theredspy15.thanelocker.BoardActivity"
            android:exported="true"
            android:label="@string/title_activity_board"
            android:parentActivityName="com.theredspy15.thanelocker.MainActivity"
            android:theme="@style/Theme.ThaneLocker.NoActionBar" />
        <activity
            android:name="com.theredspy15.thanelocker.NewBoardActivity"
            android:exported="true"
            android:parentActivityName="com.theredspy15.thanelocker.MainActivity"
            android:label="New Board"
            android:theme="@style/Theme.ThaneLocker" />
        <activity
            android:name="com.theredspy15.thanelocker.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>